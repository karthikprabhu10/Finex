# =====================================================
# FINEX BACKEND CONFIGURATION (.env)
# =====================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file with real credentials!

# MongoDB Configuration - REQUIRED
# Get connection string from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URL=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=finex
DB_NAME=finex

# API Configuration
API_TITLE=Finex API
API_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# OCR Configuration
OCR_LANGUAGES=en,hi
OCR_GPU=False

# Gemini API (Optional - for AI features)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# SMTP Configuration for OTP Email - REQUIRED for authentication
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_gmail_app_password
SENDER_NAME=Finex

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=15
OTP_MAX_ATTEMPTS=5

# Supabase Configuration - REQUIRED for authentication
# Get from: https://supabase.com/dashboard -> Settings -> API
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here